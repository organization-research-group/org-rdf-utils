{
  "compilerOptions": {
    "lib": [
      "es2019"
    ],

    "target": "ES6",

    "module": "commonjs",
    "noEmit": true,

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "downlevelIteration": true,

    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts", "test/**/*.ts"]
}
